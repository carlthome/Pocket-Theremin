<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:keepScreenOn="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/touchAmplitude"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:minWidth="50dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/amplitudeMax"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/arrow_up"
            android:gravity="top|center"
            android:maxLines="1"
            android:text="15"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/amplitude"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|center"
            android:maxLines="1"
            android:text="..."
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/amplitudeMin"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/arrow_down"
            android:gravity="bottom|center"
            android:maxLines="1"
            android:text="15"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/touchFrequency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/frequencyMin"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/arrow_left"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="20000Hz"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/frequency"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:maxLines="1"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/frequencyMax"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="right|center"
                android:maxLines="1"
                android:text="20000Hz"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
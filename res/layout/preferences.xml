<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="root" >

    <PreferenceScreen
        android:key="input_preferences"
        android:summary="Play by touching the screen or by rotating your device. Get help with selecting musical notes."
        android:title="Playing style" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:disableDependentsState="true"
            android:key="accelerometer"
            android:summaryOff="Enable to generate sounds by rotating your device."
            android:summaryOn="Disable to generate sounds by touching the screen instead."
            android:title="Accelerometer" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:dependency="accelerometer"
            android:key="multitouch"
            android:shouldDisableView="true"
            android:summary="Experimental new multi-touch."
            android:title="Multi-touch" />

        <ListPreference
            android:defaultValue="2"
            android:entries="@array/octaves"
            android:entryValues="@array/octaves"
            android:key="octaves"
            android:summary="Select the range of possible sounds. If too low certain melodies cannot be played. If too high finding a note will become too hard."
            android:title="Octave Range" />

        <PreferenceCategory android:title="Autotune" >

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="autotune"
                android:summary="Enable to receive help with selecting musical notes."
                android:title="Autotune" />

            <ListPreference
                android:defaultValue="A"
                android:dependency="autotune"
                android:entries="@array/keys"
                android:entryValues="@array/keys"
                android:key="key"
                android:summary="Select key."
                android:title="Key" />

            <ListPreference
                android:defaultValue="MAJOR"
                android:dependency="autotune"
                android:entries="@array/scale"
                android:entryValues="@array/scale"
                android:key="scale"
                android:summary="Select scale."
                android:title="Scale" />
        </PreferenceCategory>
    </PreferenceScreen>

    <ListPreference
        android:defaultValue="THEREMIN"
        android:entries="@array/presets"
        android:entryValues="@array/presets"
        android:key="preset"
        android:summary="Select an instrument."
        android:title="Sound" />

    <PreferenceCategory android:title="Advanced" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="advanced_toggle"
            android:summaryOff="Check this to stop using the presets and allow advanced settings instead."
            android:summaryOn="Disable this to use the instrument presets."
            android:title="Enable advanced" />
    </PreferenceCategory>

    <PreferenceScreen
        android:key="sound_effects"
        android:summary="Advanced settings for sound effects."
        android:title="Sound Effects" >

        <PreferenceCategory android:title="Synthesizer" >

            <ListPreference
                android:defaultValue="SINE"
                android:entries="@array/waveforms"
                android:entryValues="@array/waveforms"
                android:key="waveform"
                android:summary="Select waveform."
                android:title="Waveform" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="imd"
                android:summary="Disable for a pure sound. Enable for more fun."
                android:title="IMD" />

            <CheckBoxPreference
                android:defaultValue="false"
                android:key="chiptune"
                android:summary="Limit sound samples to 8-bits, as to simulate an old video game console."
                android:title="NES" />
        </PreferenceCategory>

        <PreferenceCategory android:title="Vibrato" >

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="vibrato"
                android:summary="Modulate the pitch"
                android:title="Vibrato" />

            <ListPreference
                android:defaultValue="8"
                android:dependency="vibrato"
                android:entries="@array/ten"
                android:entryValues="@array/ten"
                android:key="vibrato_speed"
                android:summary="Select speed (Hz)."
                android:title="Speed (Hz)" />

            <ListPreference
                android:defaultValue="4"
                android:dependency="vibrato"
                android:entries="@array/ten"
                android:entryValues="@array/ten"
                android:key="vibrato_depth"
                android:summary="Select depth in percent (percent)."
                android:title="Depth (percent)" />

            <ListPreference
                android:defaultValue="TRIANGLE"
                android:dependency="vibrato"
                android:entries="@array/waveforms"
                android:entryValues="@array/waveforms"
                android:key="vibrato_waveform"
                android:summary="Select waveform."
                android:title="Waveform" />
        </PreferenceCategory>

        <PreferenceCategory android:title="Tremolo" >

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="tremolo"
                android:summary="Modulate the amplitude."
                android:title="Tremolo" />

            <ListPreference
                android:defaultValue="1"
                android:dependency="tremolo"
                android:entries="@array/ten"
                android:entryValues="@array/ten"
                android:key="tremolo_speed"
                android:summary="Select speed (Hz)."
                android:title="Speed (Hz)" />

            <ListPreference
                android:defaultValue="10"
                android:dependency="tremolo"
                android:entries="@array/ten"
                android:entryValues="@array/ten"
                android:key="tremolo_depth"
                android:summary="Select depth (percent)."
                android:title="Depth (percent)" />

            <ListPreference
                android:defaultValue="SINE"
                android:dependency="tremolo"
                android:entries="@array/waveforms"
                android:entryValues="@array/waveforms"
                android:key="tremolo_waveform"
                android:summary="Select waveform."
                android:title="Waveform" />
        </PreferenceCategory>

        <PreferenceCategory android:title="Portamento" >

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="portamento"
                android:summary="Glide between notes."
                android:title="Portamento" />

            <ListPreference
                android:defaultValue="50"
                android:dependency="portamento"
                android:entries="@array/ten"
                android:entryValues="@array/ten"
                android:key="portamento_speed"
                android:summary="Select speed (ms)."
                android:title="Speed (ms)" />
        </PreferenceCategory>
    </PreferenceScreen>

</PreferenceScreen>